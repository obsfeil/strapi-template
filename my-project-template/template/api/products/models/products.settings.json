{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "private": false,
      "required": true,
      "unique": true
    },
    "product_categories": {
      "collection": "product-categories",
      "via": "products"
    },
    "product_tags": {
      "collection": "product-tag",
      "via": "products"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "short_description": {
      "type": "text",
      "default": "Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae, ultricies eget, tempor sit amet, ante. Donec eu libero sit amet quam egestas semper. Aenean ultricies mi vitae est. Mauris placerat eleifend leo.",
      "required": true
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "sale_price": {
      "type": "decimal",
      "min": 0
    },
    "sku": {
      "type": "string"
    },
    "stock": {
      "type": "biginteger",
      "min": "0",
      "required": true,
      "default": "0"
    },
    "ratings": {
      "type": "decimal",
      "min": 0,
      "required": true,
      "default": 0
    },
    "reviews": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "sale_count": {
      "type": "integer",
      "min": 0,
      "default": 0,
      "required": true
    },
    "large_pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "small_pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "is_hot": {
      "type": "boolean"
    },
    "is_new": {
      "type": "boolean"
    },
    "demoes": {
      "type": "string",
      "required": true
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "variants.variants"
    },
    "is_sale": {
      "type": "boolean"
    },
    "until": {
      "type": "datetime"
    },
    "is_out_of_stock": {
      "type": "boolean"
    },
    "product_brands": {
      "collection": "product-brands",
      "via": "products"
    },
    "release_date": {
      "type": "date"
    },
    "developer": {
      "type": "string"
    },
    "publisher": {
      "type": "string"
    },
    "game_mode": {
      "type": "string"
    },
    "rated": {
      "type": "string"
    }
  }
}
